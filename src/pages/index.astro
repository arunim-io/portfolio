---
import Icon from '~/components/Icon.svelte';
import { links } from '~/constants';
import Document from '~/layouts/Document.astro';
---

<Document>
  <main class="flex h-full w-full animate-fadeIn flex-col items-center justify-center space-y-10">
    <h2>Hello! I'm Mugdha Arunim Ahmed.</h2>
    <h3>Where would you like to go next?</h3>
    <ul class="space-x-2.5 space-y-2.5">
      {
        links.map(({ href, icon, name }) => (
          <a href={href} class="btn btn-filled-primary hover:btn-ghost-primary btn-lg">
            <span>
              <Icon icon={icon} />
            </span>
            <span>{name}</span>
          </a>
        ))
      }
    </ul>
  </main>
</Document>
