---
import { Icon } from 'astro-icon';

import data from '~/assets/data.json';
---

<section id="skills">
  <h1 class="text-center text-4xl font-semibold hover:cursor-pointer hover:text-primary">Skills</h1>
  <ul
    class="mt-14 grid grid-flow-row grid-cols-3 gap-5 sm:grid-cols-5 md:grid-cols-6 lg:grid-cols-8"
  >
    {
      data.skills.map(({ name, icon }) => (
        <li class="flex flex-col items-center justify-center space-y-2.5 text-center">
          <Icon name={icon} class="h-24 w-24" />
          <p>{name}</p>
        </li>
      ))
    }
  </ul>
</section>
