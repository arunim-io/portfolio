    "@supabase/supabase-js": "^1.35.3",
    "@vercel/node": "^1.15.4",
    "axios": "^0.27.2",
    "daisyui": "^2.15.2",
    "graphql": "^16.5.0",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "rehype-highlight": "^5.0.2",
    "remark-toc": "^8.0.1",
    "remix-themes": "^1.1.4"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.5.1",
